        <TextView
            style="@style/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leisure_puzzle" />

        <TextView
            style="@style/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flight_shooting" />

        <TextView
            style="@style/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act_adventure" />

        <TextView
            style="@style/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sports" />

        <TextView
            style="@style/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

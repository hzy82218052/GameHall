            android:text="@string/tv_game" />

        <TextView
            style="@style/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hand_game" />

        <TextView
            style="@style/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/peripheral_game" />

        <TextView
            style="@style/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_peripheral" />
    </LinearLayout>

    <LinearLayout

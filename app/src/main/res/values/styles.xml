<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="scrollview">
        <item name="android:fadeScrollbars">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:scrollbars">none</item>
        </style>
    
    <style name="title1">
    <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/txt_home_seletor</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>
    <style name="title2">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/txt_home_seletor</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textScaleX">0.95</item>
    </style>


    <style name="detail_title">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/txt_home_seletor</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    <style name="detail_star">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="@+android:id/background">"@drawable/star1"</item>
        <item name="@+android:id/secondaryProgress">"@drawable/star1"</item>
        <item name="@+android:id/progress">"@drawable/star2"</item>
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>


</resources>
